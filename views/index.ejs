<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kerem Yalcin</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Arial", sans-serif;
      }

      header {
        background-color: #333;
        padding: 15px 0;
      }

      .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
        position: relative; /* Bu, nav menüsünün üstteki içerikten bağımsız olarak konumlanmasını sağlar */
      }

      /* Logo kısmı */
      .logo a {
        color: white;
        font-size: 24px;
        text-decoration: none;
        font-weight: bold;
        display: flex;
        align-items: center;
      }

      .logo svg {
        width: 30px;
        height: 30px;
        margin-right: 10px; /* İkon ile metin arasında boşluk */
        fill: white; /* SVG ikonunu beyaz yapar */
      }

      .nav-links {
        list-style: none;
        display: flex;
        gap: 20px;
        flex-wrap: wrap; /* Uzun metinler alt satıra geçebilir */
        justify-content: center; /* Menü öğeleri merkezlenir */
      }

      .nav-links li a {
        color: white;
        text-decoration: none;
        font-size: 18px;
        padding: 8px 15px;
        transition: background-color 0.3s;
        white-space: nowrap; /* Yazının satır sonlarına geçmesini engeller */
      }

      .nav-links li a:hover {
        background-color: #555;
        border-radius: 5px;
      }

      .menu-icon {
        display: none;
        flex-direction: column;
        gap: 5px;
        cursor: pointer;
      }

      .menu-icon span {
        width: 30px;
        height: 4px;
        background-color: white;
        border-radius: 2px;
      }

      @media (max-width: 768px) {
        .nav-links {
          display: none;
          width: 100%;
          flex-direction: column;
          gap: 15px;
          text-align: center;
          background-color: #333;
          position: absolute;
          top: 60px;
          left: 0;
          padding: 20px;
          z-index: 10; /* Menü üstte görünsün */
        }

        .nav-links li a {
          font-size: 20px;
          white-space: normal; /* Uzun metinlerin alt satıra geçmesine izin ver */
        }

        .nav-links.active {
          display: flex;
        }

        .menu-icon {
          display: flex;
        }
      }

      .nav-links.active {
        animation: slideDown 0.5s ease-out;
      }

      @keyframes slideDown {
        0% {
          opacity: 0;
          transform: translateY(-50px);
        }
        100% {
          opacity: 1;
          transform: translateY(0);
        }
      }
    </style>
  </head>
  <body>
    <header>
      <nav class="navbar">
        <div class="logo">
          <a href="#">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z" />
            </svg>
            Kerem Yalçın
          </a>
        </div>
        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          <li>
            <a href="/find-your-cuberoot-31-day">Find your cuberoot 31 day</a>
          </li>
          <li><a href="/cuberoot-31">Cuberoot 31</a></li>
          <li><a href="/learn-cuberoot-31">Learn about cuberoot 31</a></li>
        </ul>
        <div class="menu-icon" id="menu-icon">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </nav>
    </header>

    <script>
      const menuIcon = document.getElementById("menu-icon");
      const navLinks = document.querySelector(".nav-links");

      menuIcon.addEventListener("click", () => {
        navLinks.classList.toggle("active");
      });
    </script>
  </body>
</html>
